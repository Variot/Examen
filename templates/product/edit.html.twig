{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<div class="container">

    {{ form_start(form) }}

    {{ form_row(form._token) }}

    {{ form_label(form.name,'Nom du produit') }}
    {{ form_widget(form.name,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.price,'Prix du produit') }}
    {{ form_widget(form.price,{'attr':{'maxlength':'50'}}) }}

    <div hidden>
        {{ form_label(form.slug,'Slug') }}
        {{ form_widget(form.slug) }}
    </div>


    {{ form_label(form.img,'') }}
    {{ form_widget(form.img,{'attr':{'maxlength':'255'}}) }}

    {{ form_label(form.category,'Cat√©gorie') }}
    {{ form_widget(form.category)}}

    {{ form_label(form.save,'Ajouter produit') }}
    {{ form_widget(form.save) }}

    {{ form_end(form, {'render_rest': false}) }}


</div>
{% endblock %}